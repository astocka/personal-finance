@using System.Globalization;
@using PersonalFinance.Web.Models;
@model PersonalFinance.Web.Models.Budget

@{
    ViewData["Title"] = "Budget";
}

<p class="display-4">Create an budget</p>
<hr />

<div class="row">
    <div class="col-md-3">
        <form class="form" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Month"></label>
                <input type="number" asp-for="Month" class="form-control" placeholder="Month" />
                <span asp-validation-for="Month" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year"></label>
                <input type="number" asp-for="Year" class="form-control" placeholder="Year" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalRevenue">Total Revenue</label>
                <input type="text" asp-for="TotalRevenue" class="form-control" placeholder="Total Revenue" />
                <span asp-validation-for="TotalRevenue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlannedExpenses">Planned Expenses</label>
                <input type="text" asp-for="PlannedExpenses" class="form-control" placeholder="Planned Expenses" />
                <span asp-validation-for="PlannedExpenses" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-success" />
            <input type="reset" value="Reset" class="btn btn-danger" />
            <a class="btn btn-dark" asp-controller="Budget" asp-action="Index">Back to list</a>
        </form>
    </div>
</div>