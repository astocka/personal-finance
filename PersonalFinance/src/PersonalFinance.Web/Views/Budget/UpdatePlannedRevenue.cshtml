@using PersonalFinance.Web.Models
@model PersonalFinance.Web.Models.PlannedRevenue

@{
    ViewData["Title"] = "Budget";
}

<p class="display-4">Update planned revenue</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form class="form" asp-controller="Budget" asp-action="CreatePlannedRevenue" asp-route-plannedRevenueId="@Model.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.BudgetId" />
            <div class="form-group">
                <label asp-for="Amount"></label>
                <input type="text" asp-for="Amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="mr-3" asp-for="Kind"></label>
                <select asp-for="Kind" asp-items="Html.GetEnumSelectList<RevenueKind>()"></select>
                <span asp-validation-for="Kind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="IsReceived" class="float-left mr-3" />
                <label asp-for="IsReceived"></label>
                <span asp-validation-for="IsReceived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceivedDate"></label>
                <input type="date" asp-for="ReceivedDate" class="form-control" />
                <span asp-validation-for="ReceivedDate" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-warning" />
            <input type="reset" value="Reset" class="btn btn-danger" />
            <a class="btn btn-dark" asp-controller="Budget" asp-action="Details" asp-route-id="@Model.BudgetId">Back</a>
        </form>
    </div>
</div>
