@using System.Globalization;
@model PersonalFinance.Web.Models.Revenue


<p class="display-4">Update the revenue</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="custom-control"></label>
                <input type="date" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="custom-control"></label>
                <input type="text" asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="custom-control"></label>
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payer" class="custom-control"></label>
                <input type="tel" asp-for="Payer" class="form-control" />
                <span asp-validation-for="Payer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="custom-control"></label>
                <input type="text" asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-dark" asp-controller="Revenues" asp-action="Index">Back to list</a>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
