@using System.Globalization;
@model List<PersonalFinance.Web.Models.Revenue>


<p class="display-4">Revenues</p>
<hr />
<div class="mt2 form-inline">
    <a class="btn btn-success" asp-controller="Revenues" asp-action="Create" type="submit">Add revenue</a>
    <a class="btn btn-info" asp-controller="Revenues" asp-action="ImportRevenues" type="submit">Import revenues</a>
    <span class="ml-2 mt-1 font-weight-bold text-danger"> @TempData["RevenuesExist"]</span>
</div>

<br />

<div class="mt-3">
    <table class="table table-borderless">
        <tr class="table-dark">
            <th>Id</th>
            <th>Date</th>
            <th>Amount</th>
            <th>Description</th>
            <th>Payer</th>
            <th>Notes</th>
            <th>Options</th>
        </tr>
        @foreach (var revenue in Model)
        {
    <tr class="table table-bordered">
        <td>@revenue.Id.ToString()</td>
        <td>@revenue.Date.ToShortDateString()</td>
        <td>@revenue.Amount.ToString("C", CultureInfo.CurrentCulture)</td>
        <td>@revenue.Description</td>
        <td>@revenue.Payer</td>
        <td>@revenue.Notes</td>
        <td class="form-inline">
            <form asp-controller="Revenues" asp-action="Update" asp-route-id="@revenue.Id" method="get">
                <input type="hidden" asp-for="@revenue.Id" />
                <input type="submit" value="Update" class="btn btn-warning" />
            </form>
            <form asp-controller="Revenues" asp-action="Delete" asp-route-id="@revenue.Id" method="post">
                <input type="hidden" asp-for="@revenue.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </td>
    </tr>
        }
    </table>
</div>