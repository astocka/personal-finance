@using System.Globalization;
@model PersonalFinance.Web.Models.Budget

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
</div>

<p class="display-4">Current budget</p>
<hr />

<div class="mt-3">
    <table class="table table-borderless">
        <tr class="table-dark">
            <th>Month</th>
            <th>Year</th>
            <th>Total Revenue</th>
            <th>Planned Expenses</th>
            <th>Balance</th>
            <th>Options</th>
        </tr>
        <tr class="table table-bordered">
            <td>@Model.Month</td>
            <td>@Model.Year</td>
            <td>@Model.TotalRevenue.ToString("C", CultureInfo.CurrentCulture)</td>
            <td>@Model.PlannedExpenses.ToString("C", CultureInfo.CurrentCulture)</td>
            <td>@Model.Balance.ToString("C", CultureInfo.CurrentCulture)</td>
            <td class="form-inline">
                <form asp-controller="Budget" asp-action="Details" asp-route-budgetId="@Model.Id" method="get">
                    <input type="submit" value="Details" class="btn btn-info" />
                </form>
                <form asp-controller="Budget" asp-action="Update" asp-route-budgetId="@Model.Id" method="get">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="Update" class="btn btn-warning" />
                </form>
                <form asp-controller="Budget" asp-action="Delete" asp-route-budgetId="@Model.Id" method="post">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </td>
        </tr>
    </table>
</div>

<p class="display-4">Bill's to pay</p>
<hr />

<div class="mt-3">
    <table class="table table-borderless">
        <tr class="table-dark">
            <th>Date</th>
            <th>Amount</th>
            <th>Notes</th>
            <th>Due date</th>
            <th>Options</th>
        </tr>
        @foreach (var bill in ViewBag.UnpaidBills)
        {
            <tr class="table table-bordered">
                <td>@bill.Date.ToShortDateString()</td>
                <td>@bill.Amount</td>
                <td>@bill.Notes</td>
                <td>@bill.DueDate.ToShortDateString()</td>
                <td class="form-inline">
                    @if (bill.Id != null)
                    {
                        <form asp-controller="Bills" asp-action="Update" asp-route-Id="@bill.Id" method="get">
                            <input type="submit" value="Pay" class="btn btn-success" />
                        </form>
                    }
                </td>
            </tr>
        }
    </table>
</div>

<p class="display-4">Bills after deadlines</p>
<hr />

<div class="mt-3">
    <table class="table table-borderless">
        <tr class="table-dark">
            <th>Date</th>
            <th>Amount</th>
            <th>Notes</th>
            <th>Due date</th>
            <th>Options</th>
        </tr>
        @foreach (var bill in ViewBag.UnpaidBills)
        {
            @if (bill.DueDate < DateTime.Now)
            {
                <tr class="table table-bordered">
                    <td>@bill.Date.ToShortDateString()</td>
                    <td class="text-danger font-weight-bold">@bill.Amount</td>
                    <td>@bill.Notes</td>
                    <td class="text-danger font-weight-bold">@bill.DueDate.ToShortDateString()</td>
                    <td class="form-inline">
                        @if (bill.Id != null)
                        {
                            <form asp-controller="Bills" asp-action="Update" asp-route-Id="@bill.Id" method="get">
                                <input type="submit" value="Pay" class="btn btn-success" />
                            </form>
                        }
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td>There's no after deadline bills!</td>
                </tr>
            }
        }
    </table>
</div>