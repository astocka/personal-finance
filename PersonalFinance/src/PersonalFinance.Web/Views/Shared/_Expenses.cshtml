@using PersonalFinance.Web.Models
@model PersonalFinance.Web.Models.PlannedExpense

    <div class="row">
        <div class="col-md-12">
            <form id="AddExpenseForm" class="form-inline" asp-action="CreateExpense" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input type="text" asp-for="Amount" class="form-control" placeholder="Amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kind" class="custom-control"></label>
                    <select asp-items="Html.GetEnumSelectList<ExpenseKind>()"></select>
                    <span asp-validation-for="Kind" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="custom-control"></label>
                    <input type="date" asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" asp-for="Code" class="form-control" placeholder="Code"/>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <input type="submit" value="Save" id="saveExpenseBtn" class="btn btn-warning" onclick="AddExpense()" />
                <input type="reset" value="Reset" class="btn btn-danger" />
            </form>
        </div>
    </div>
